/* !TODO - move this to prelude/Function */
addIndex :: ((a -> b) -> c -> d) -> (a -> Number -> b) -> c -> d
addIndex = (fn, y, xs) => {
  i = 0
  return fn(
    (x) => {
      result = y(x, i)
      i = i + 1
      return result 
    },
    xs
  )
}

